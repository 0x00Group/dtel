{
	"compilerOptions": {
    "outDir": "./built",
    "allowJs": true,
		"target": "es2017",
		"allowSyntheticDefaultImports": true,
		"baseUrl": ".",
		"paths": {
			"*": ["node_modules/*", "node_modules/*/index", "node_modules/*/dist/index", "node_modules/*/src/index", "node_modules/*/typings/index"],
		},
  },
  "include": [
    "./src/**/*",
	],
	"exclude": [ "./node_modules" ],
}
